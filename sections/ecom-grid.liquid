            <span class="w-2 h-full bg-purple-500"></span>
            <!-- Button Text -->
            <span class="flex py-2 pl-1 justify-start font-jost font-normal text-lg">Color Variant 1</span>
          </button>
        </div>

        <!-- Size Dropdown Heading -->

        <h2 class="font-jost font-normal text-sm">Size</h2>
        <!-- Size Dropdown -->
        <select class="w-full  border border-black p-2">
          <option class="font-jost font-normal text-base text-black">Small</option>
          <option class="font-jost font-normal text-base text-black">Medium</option>
          <option class="font-jost font-normal text-base text-black">Large</option>
          <!-- Additional sizes can be added here -->
        </select>
      </div>

      <!-- Add to Cart Button -->
      <button class="bg-blue-500 text-white font-semibold py-2 px-4 rounded-md w-full hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
        Add to Cart
      </button>
    </div>
