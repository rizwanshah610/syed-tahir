<section>
  <header class="bg-[#F5F5F5] text-white p-4">
    <!-- Toggle Button (Visible on mobile and tablet) -->
    <button class="block md:hidden text-black focus:outline-none" id="menu-toggle">
      <i class="fas fa-bars fa-lg"></i>
    </button>

    <!-- Container (Hidden on small screens) -->
    <div id="navbar" class="hidden md:flex md:items-center md:justify-between md:container mx-auto">
      <!-- Left Logo -->
      <div class="md:flex-shrink-0 text-xl mb-4 md:mb-0">
        <a href="{{ shop.url   }}" class="uppercase text-black px-4 md:px-12 font-semibold text-base md:text-2xl ">
          {{ section.settings['text-logo'] }}
        </a>
      </div>

      <!-- Center Text -->
      <div class="md:flex-1 text-center mb-4 md:mb-0">
        <h1 class="text-base md:text-xl font-normal text-black">
          {{ section.settings['info-text'] }}
        </h1>
      </div>

      <!-- Choose Gift Button -->
      <div class="md:flex-shrink-0">
        <a
          href="#choose-gift"
          class="bg-[#FFF544] text-black py-2 px-6 md:px-14 mx-4 md:mx-12 transition duration-300 uppercase flex items-center justify-center"
        >
          Choose Gift
          <i class="fas fa-arrow-right ml-2"></i>
        </a>
      </div>
    </div>

    <!-- Mobile Menu (hidden by default) -->
    <nav id="mobile-menu" class="md:hidden fixed top-0 left-0 w-full h-screen  z-50 hidden">
      <div class="bg-[#F5F5F5] p-4 flex justify-between items-center border-b">
        <div class="text-2xl" style="margin:auto">
          <a href="{{shop.url}}" class="mobile-logo uppercase text-black font-bold">
            {{ section.settings['text-logo'] }}
          </a>
        </div>
        <button class="absolute left-4 top-4 text-black" id="close-menu">
          <i class="fas fa-times fa-lg"></i>
        </button>
      </div>
      <div class="bg-[#F2F2F2] flex flex-col items-center ">
        <a class="text-black py-2 font-normal text-2xl">
          {{ section.settings['info-text'] }}
        </a>
        <a
          href="#choose-gift"
          class="bg-[#FFF544] text-black py-2 px-1 mt-4 transition duration-300 uppercase flex items-center justify-center w-[50%]"
        >
          {{ section.settings['gift-btn-text'] }}
          <i class="fas fa-arrow-right ml-2"></i>
        </a>
      </div>
    </nav>
  </header>

  <div class="bg-gray-100">
    <div class="max-w-6xl mx-auto p-6 bg-white shadow-lg rounded-lg">
      <div class="flex flex-col md:flex-row">
        <!-- Left section - Image -->
        <div class="md:w-1/2">
          <img src="https://placehold.co/600x600" alt="Product Image" class="w-full rounded-lg">
        </div>

        <!-- Right section - Content -->
        <div class="md:w-1/2 md:pl-10 mt-4 md:mt-0">
          <h1 class="text-3xl font-bold text-gray-800">Product Name</h1>
          <p class="text-xl text-gray-600 mt-2">$99.99</p>

          <div class="mt-4">
            <p class="text-gray-700">
              This is a brief description of the product. It gives an overview of the productâ€™s features and benefits.
            </p>
          </div>

          <div class="mt-6">
            <label for="size" class="block text-sm font-medium text-gray-700">Size</label>
            <select
              id="size"
              name="size"
              class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md"
            >
              <option>Small</option>
              <option>Medium</option>
              <option>Large</option>
            </select>
          </div>

          <div class="mt-6">
            <button class="w-full bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-500">
              Add to Cart
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner Settings",
  "settings": [
    {
      "type": "text",
      "id": "text-logo",
      "label": "Logo Text",
      "default": "Tisso vison"
    },
    {
      "type": "text",
      "id": "info-text",
      "label": "Announcement Message",
      "default": "Find the ideal gift for your loved ones"
    },
    {
      "type": "text",
      "id": "gift-btn-text",
      "label": "Button Text",
      "default": "Choose Gift"
    }
  ]
}
{% endschema %}
<!-- Add this JavaScript to toggle the menu -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Function to update the visibility of the navbar
    function updateVisibility() {
      const navbar = document.getElementById('navbar');
      const isMediumOrLarger = window.matchMedia('(min-width: 768px)').matches;

      if (navbar) {
        if (isMediumOrLarger) {
          navbar.classList.remove('hidden');
        } else {
          navbar.classList.add('hidden');
        }
      }
    }

    // Initial check
    updateVisibility();

    // Update visibility on window resize
    window.addEventListener('resize', updateVisibility);

    // Toggle mobile menu visibility
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const closeMenu = document.getElementById('close-menu');

    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener('click', function () {
        mobileMenu.classList.toggle('hidden');
      });
    }

    // Close mobile menu
    if (closeMenu && mobileMenu) {
      closeMenu.addEventListener('click', function () {
        mobileMenu.classList.add('hidden');
      });
    }
  });
</script>
