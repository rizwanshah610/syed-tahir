<section>
  <header class="bg-[#F5F5F5] text-white p-4">
    <!-- Toggle Button (Visible on mobile and tablet) -->
    <button class="block md:hidden text-black focus:outline-none" id="menu-toggle">
      <i class="fas fa-bars fa-lg"></i>
    </button>

    <!-- Container (Hidden on small screens) -->
    <div id="navbar" class="hidden md:flex md:items-center md:justify-between md:container mx-auto">
      <!-- Left Logo -->
      <div class="md:flex-shrink-0 text-xl mb-4 md:mb-0">
        <a href="{{ shop.url   }}" class="uppercase text-black px-4 md:px-12 font-semibold text-base md:text-2xl ">
          {{ section.settings['text-logo'] }}
        </a>
      </div>

      <!-- Center Text -->
      <div class="md:flex-1 text-center mb-4 md:mb-0">
        <h1 class="text-base md:text-xl font-normal text-black">
          {{ section.settings['info-text'] }}
        </h1>
      </div>

      <!-- Choose Gift Button -->
      <div class="md:flex-shrink-0">
        <a
          href="#choose-gift"
          class="bg-[#FFF544] text-black py-2 px-6 md:px-14 mx-4 md:mx-12 transition duration-300 uppercase flex items-center justify-center"
        >
          Choose Gift
          <i class="fas fa-arrow-right ml-2"></i>
        </a>
      </div>
    </div>

    <!-- Mobile Menu (hidden by default) -->
    <nav id="mobile-menu" class="md:hidden fixed top-0 left-0 w-full h-screen  z-50 hidden">
      <div class="bg-[#F5F5F5] p-4 flex justify-between items-center border-b">
        <div class="text-2xl" style="margin:auto">
          <a href="{{shop.url}}" class="mobile-logo uppercase text-black font-bold">
            {{ section.settings['text-logo'] }}
          </a>
        </div>
        <button class="absolute left-4 top-4 text-black" id="close-menu">
          <i class="fas fa-times fa-lg"></i>
        </button>
      </div>
      <div class="bg-[#F2F2F2] flex flex-col items-center ">
        <a class="text-black py-2 font-normal text-2xl">
          {{ section.settings['info-text'] }}
        </a>
        <a
          href="#choose-gift"
          class="bg-[#FFF544] text-black py-2 px-1 mt-4 transition duration-300 uppercase flex items-center justify-center w-[50%]"
        >
          {{ section.settings['gift-btn-text'] }}
          <i class="fas fa-arrow-right ml-2"></i>
        </a>
      </div>
    </nav>
  </header>

  <div class="bg-red-400 w-full">
    <!-- Display banner content for small screens -->
    <div class="block md:hidden">
      <h1 class=" text-black font-jost font-medium text-3xl text-center my-10">The Gift Guide</h1>

      <div class="flex justify-center">
        <p class="text-black text-center font-jost font-normal w-[21.25rem] text-base">
          Discover Joy: Your Ultimate Holiday Gift Destination.
        </p>
      </div>

      <button class="absolute top-[21.063rem] left-1/3 py-3 px-3 bg-black text-white font-jost font-normal text-base w-[12.063rem] h-[2.813rem] hover:bg-gray-800 transition-colors duration-300">
        SHOP NOW
        <i class="fas fa-arrow-right ml-2"></i>
      </button>
    </div>

    <div class="sm:my-5 md:my-0">
      {% if section.settings['banner-image'] != blank %}
        <!-- Display the image as the banner -->
        <img
          src="{{ section.settings.banner-image | img_url: 'large' }}"
          alt="Image Banner"
          class="w-full object-top sm:h-[16.5rem] md:h-[48.75rem]"
        >
      {% else %}
        <!-- Display the placeholder SVG if no product image is available -->
        {{ 'lifestyle-2' | placeholder_svg_tag }}
      {% endif %}
    </div>

    <!-- Display banner content on medium and large screens -->
    <div
      id="banner-content"
      class="hidden md:absolute md:top-[30.563rem] md:left-[4.188rem] md:bg-purple-400 md:flex md:flex-col md:items-center md:justify-center md:text-center md:space-y-9"
    >
      <h1 class="text-black font-jost font-medium text-3xl md:text-7xl">The Gift Guide</h1>
      <p class="text-black text-left font-jost font-normal w-full max-w-[30.188rem] text-base md:text-xl">
        Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts
        to delight your loved ones this holiday season.
      </p>
      <button class="bg-black text-white font-jost font-normal text-sm md:text-base w-full max-w-xs h-12 px-6 py-2 flex items-center justify-center hover:bg-gray-800 transition-colors duration-300">
        SHOP NOW
        <i class="fas fa-arrow-right ml-2"></i>
      </button>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner Settings",
  "settings": [
    {
      "type": "text",
      "id": "text-logo",
      "label": "Logo Text",
      "default": "Tisso vison"
    },
    {
      "type": "text",
      "id": "info-text",
      "label": "Announcement Message",
      "default": "Find the ideal gift for your loved ones"
    },
    {
      "type": "text",
      "id": "gift-btn-text",
      "label": "Button Text",
      "default": "Choose Gift"
    },
    {
      "type": "image_picker",
      "id": "banner-image",
      "label": "Banner Image"
    }
  ]
}
{% endschema %}

<script>
  // Show navbar for medium and large screens
  document.addEventListener('DOMContentLoaded', function () {
    // Function to update the visibility of the navbar and banner content
    function updateVisibility() {
      const navbar = document.getElementById('navbar');
      const bannercontent = document.getElementById('banner-content');
      const isMediumOrLarger = window.matchMedia('(min-width: 768px)').matches;

      if (navbar) {
        if (isMediumOrLarger) {
          navbar.classList.remove('hidden');
        } else {
          navbar.classList.add('hidden');
        }
      }

      if (bannercontent) {
        if (isMediumOrLarger) {
          bannercontent.classList.remove('hidden');
        } else {
          bannercontent.classList.add('hidden');
        }
      }
    }

    // Initial check
    updateVisibility();

    // Update visibility on window resize
    window.addEventListener('resize', updateVisibility);

    // Toggle mobile menu visibility
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const closeMenu = document.getElementById('close-menu');

    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener('click', function () {
        mobileMenu.classList.toggle('hidden');
      });
    }

    // Close mobile menu
    if (closeMenu && mobileMenu) {
      closeMenu.addEventListener('click', function () {
        mobileMenu.classList.add('hidden');
      });
    }
  });

  //Banner content show on medium and larger screen
</script>
